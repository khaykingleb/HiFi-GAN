{
    "use_wandb": true,
    "wandb_project_name": "tts_vocoder",

    "path_to_data": "./data",
    "verbose": true,
    "seed": 1234,
    "num_workers": 4,

    "train_ratio": 0.975,
    "batch_size": 16,
    "grad_norm_clip": 10,

    "path_to_save": "./saved",
    "checkpoint_path": "",
    "load_model": false,
    
    "n_mels": 80,
    "n_freq": 1025,
    "n_fft": 1024,
    "hop_length": 256,
    "win_length": 1024,
    "sr": 22050,
    "center": false,
    "f_min": 0,
    "f_max": 8000,
    "f_max_loss": null,

    "initial_channels": 512,
    "upsample_kernel_sizes": [16, 16, 4, 4],
    "resblock_kernel_sizes": [3, 7, 1],
    "dilation_rates": [[1,3,5], [1,3,5], [1,3,5]],

    "mpd_periods": [2, 3, 5, 7, 11],
    "msd_use_spectral_norm": [true, false, false],

    "adam_beta_1": 0.8, 
    "adam_beta_2": 0.99,
    "weight_decay": 1e-2,
    "learning_rate": 2e-4,
    "gamma": 0.999

}